{
  "name": "react-display-switch",
  "version": "0.4.1",
  "description": "Declarative React Components for improving readability by eliminating { }, && and ternary operators out of JSX",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s build:*",
    "build:babel": "babel src/ --out-dir lib/ --minified --source-maps inline",
    "build:sample": "browserify --verbose -t babelify sample/index.js -o sample/index.bundle.js",
    "pretest": "npm run build",
    "test": "run-s test:*",
    "test:jest": "jest",
    "test:standard": "standard"
  },
  "keywords": [
    "react",
    "jsx",
    "declarative",
    "switch"
  ],
  "author": "Sho Hashimoto <hashimoto@shokai.org>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^16.1.1",
    "jest": "^22.4.3",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "standard": "^11.0.1"
  },
  "jest": {
    "testMatch": [
      "**/test/*.js"
    ]
  },
  "standard": {
    "ignore": [
      "/lib"
    ]
  }
}
